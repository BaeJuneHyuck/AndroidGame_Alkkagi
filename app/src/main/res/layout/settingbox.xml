<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/stage_window_border">

    <SeekBar
        android:id="@+id/seekBarSound"
        android:layout_width="242dp"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSound"
        />

    <SeekBar
        android:id="@+id/seekBarBgm"
        android:layout_width="242dp"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBgm" />

    <TextView
        android:id="@+id/textSound"
        android:layout_width="238dp"
        android:layout_height="35dp"
        android:layout_marginTop="49dp"
        android:text="SoundEffect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boxTitle"
        android:textColor="#000000"
        android:textColorHighlight="#555555"
        android:gravity="center"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textBgm"
        android:layout_width="238dp"
        android:layout_height="35dp"
        android:layout_marginTop="53dp"
        android:text="Bgm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarSound"
        android:textColor="#000000"
        android:textColorHighlight="#555555"
        android:gravity="center"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/boxTitle"
        android:layout_width="405dp"
        android:layout_height="44dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="@string/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#FF9999"
        android:textColorHighlight="#FFFFFF"
        android:gravity="center"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/button_adjust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:layout_marginLeft="163dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginBottom="30dp"
        android:text="@string/ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarBgm" />

</android.support.constraint.ConstraintLayout>